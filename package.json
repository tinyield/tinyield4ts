        "type": "git"
    },
    "main": "index.js",
    "types": "index.d.ts",
    "scripts": {
        "snapshot": "npm pack ./dist",
        "test": "karma start",
        "build": "tsc -p tsconfig.lib.json && copyfiles package.json dist",
        "check": "gts check",
        "clean": "gts clean",
        "fix": "gts fix",
        "pretest": "npm run clean",
        "precompile": "npm run clean",
        "presnapshot": "npm run build"
    },
    "contributors": [
        {
            "name": "Fernando Miguel Gamboa de Carvalho",
            "email": "mcarvalho@cc.isel.ipl.pt",
            "url": "http://gamboa.pt/"
        },
        {
            "name": "Diogo Poeira",
            "email": "diogopoeira91@gmail.com"
        }
    ],
    "license": "Apache-2.0",
    "keywords": [
        "tinyield",
        "yield",
        "sequence",
        "iterator",
        "typescript",
        "tiny"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": "prettier --check"
    },
    "devDependencies": {
        "@types/jasmine": "^2.8.7",
        "@types/node": "^10.0.3",
        "copyfiles": "^2.1.1",
        "gts": "^1.1.2",
        "husky": "^3.1.0",
        "jasmine-core": "^3.5.0",
        "karma": "^4.4.1",
        "karma-chrome-launcher": "^3.1.0",
        "karma-coverage-istanbul-reporter": "^2.1.1",
        "karma-jasmine": "^2.0.1",
        "karma-jasmine-html-reporter": "^1.4.2",
        "karma-spec-reporter": "0.0.32",
        "karma-typescript": "^4.1.1",
        "lint-staged": "^9.5.0",
        "mrm": "^2.0.2",
        "tslint": "^5.10.0",
        "tslint-config-standard-plus": "^2.3.0",
        "typescript": "~3.7.0"
    }
